                        <tr>
                            <td width="25%" />
                            <td width="25%" />
                            <td width="25%" />
                            <td width="25%" />
                        </tr>
                        <tr>
                            @if (ViewBag.SaleRecord)
                            {
                                <td>
                                    <a href="#" class="card" rel="/Order/Confirm" title="@Resources.Module.Menu_OrderConfirm">
                                        <span class="icon quicklinks4"></span>
                                        <span class="title">@Resources.Module.Menu_OrderConfirm</span>
                                    </a>
                                </td>
                            }
                            @if (ViewBag.SaleOrder)
                            {
                                <td>
                                    <a href="#" class="card" rel="/Order/NewOrder" title="@Resources.Module.Menu_SalesOrder">
                                        <span class="icon quicklinks5"></span>
                                        <span class="title">@Resources.Module.Menu_SalesOrder</span>
                                    </a>
                                </td>
                            }
                            @if (ViewBag.CustomerAudit)
                            {
                                <td>
                                    <a href="#" class="card" rel="/Customer/ApproveCustomer" title="@Resources.Module.Menu_CustomerAudit">
                                        <span class="icon quicklinks6"></span>
                                        <span class="title">@Resources.Module.Menu_CustomerAudit</span>
                                    </a>
                                </td>
                            }
                        </tr>
                    </table>
                </div>
            </div>
        }
        @if (ViewBag.PhotoView || ViewBag.VisitResult || ViewBag.SalesVolumeReport)
        {
            <div class="section">
                <div class="heading">
                    @Resources.Language.txt_QuickView
                </div>
                <div class="content">
                    <table border="0" cellspacing="0" cellpadding="0" class="cardview">
                        <tr>
                            <td width="25%" />
                            <td width="25%" />
                            <td width="25%" />
                            <td width="25%" />
                        </tr>
                        <tr>
                            @if (ViewBag.PhotoView)
                            {
                                <td>
                                    <a href="#" class="card" rel="/PhotoView/PhotoView" title="@Resources.Module.Menu_PhotoView">
                                        <span class="icon quicklinks7"></span>
                                        <span class="title">@Resources.Module.Menu_PhotoView</span>
                                    </a>
                                </td>
                            }
                            @if (ViewBag.VisitResult)
                            {
                                <td>
                                    <a href="#" class="card" rel="/Visit/ViewVisit" title="@Resources.Module.Menu_VisitResult">
                                        <span class="icon quicklinks8"></span>
                                        <span class="title">@Resources.Module.Menu_VisitResult</span>
                                    </a>
                                </td>
                            }
                            @if (ViewBag.SalesVolumeReport)
                            {
                                <td>
