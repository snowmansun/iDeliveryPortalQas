@{
    ViewBag.Title = "Main";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

@section script{
    <script type="text/javascript">
        $(function () {
            $('html').removeClass("panel-fit");
            $('body').removeClass("easyui-layout layout panel-noscroll");

            $(".card").each(function () {
                $(this).click(function () {
                    var title = $(this).attr("title");
                    var url = $(this).attr("rel");
                    window.parent.addTab(title, url, "");
                });
            });
        });
    </script>
}

<body style="margin: 0;">
    <div class="dashboard" style="overflow-x: auto; overflow-y: auto;">
        @if (ViewBag.Customer || ViewBag.User || ViewBag.Product)
        {
            <div class="section">
                <div class="heading">
                    @Resources.Language.txt_InitInformation
                </div>
                <div class="content">
                    <table border="0" cellspacing="0" cellpadding="0" class="cardview">
                        <tr>
                            <td width="25%" class="next" />
                            <td width="25%" class="next" />
                            <td width="25%" class="next" />
                            <td width="25%" />
                        </tr>
                        <tr>
                            @if (ViewBag.User)
                            {
                                <td class="next">
                                    <a href="#" class="card" rel="/User/UserManager" title="@Resources.Module.Menu_User">
                                        <span class="icon quicklinks2"></span>
                                        <span class="title">@Resources.Module.Menu_User</span>
                                    </a>
                                </td>
                            }
                            @if (ViewBag.Customer)
                            {
                                <td class="next">
                                    <a href="#" class="card" rel="/Customer/Customer" title="@Resources.Module.Menu_Customer">
                                        <span class="icon quicklinks1"></span>
                                        <span class="title">@Resources.Module.Menu_Customer</span>
                                    </a>
                                </td>
                            }
                            @if (ViewBag.CustomerCoverage)
                            {
                                <td class="next">
                                    <a href="#" class="card" rel="/Customer/RoutePlan" title="@Resources.Module.Menu_CustomerCoverage">
                                        <span class="icon quicklinks10"></span>
                                        <span class="title">@Resources.Module.Menu_CustomerCoverage</span>
                                    </a>
                                </td>
                            }
                            @if (ViewBag.Product)
                            {
                                <td>
                                    <a href="#" class="card" rel="/Product/Product" title="@Resources.Module.Menu_Product">
                                        <span class="icon quicklinks3"></span>
                                        <span class="title">@Resources.Module.Menu_Product</span>
                                    </a>
                                </td>
                            }
                        </tr>
                    </table>
                </div>
            </div>
        }
        @if (ViewBag.SaleRecord || ViewBag.SaleOrder || ViewBag.CustomerAudit)
        {
            <div class="section">
                <div class="heading">
                    @Resources.Language.txt_QuickEntry
                </div>
                <div class="content">
